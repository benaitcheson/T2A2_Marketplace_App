<%= simple_form_for @clients do |f| %>
        <div class="form-inputs">

            <%# Home %>
            <%= f.input :ppor %>
            <br>

            <%# Contents %>
            <%= f.input :contents %>
            <br>

            <%# Investment Property %>
            <%= f.input :investproperty %>
            <br>

            <%# Business %>
            <%= f.input :business %>
            <br>

            <%# Collectables %>
            <%= f.input :collectable %>
            <br>

            <%# Shares %>
            <%= f.input :share %>
            <br>

            <%# Cash at Bank %>
            <%= f.input :cash %>
            <br>

            <%# Vehicles %>
            <%= f.input :vehicles %>
            <br>

            <%# Other %>
            <%= f.input :other %>
            <br>

        </div>

        <div class="form-actions">
            <%= f.button :submit %>
        </div>

    <% end %>